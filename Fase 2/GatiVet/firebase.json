{
  "database": {
    "rules": "database.rules.json"
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/products",
        "destination": "/productos.html"
      },
      {
        "source": "/base-products",
        "destination": "/base_producto.html"
      },
      {
        "source": "/help",
        "destination": "/help.html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/login",
        "destination": "/login.html"
      }
    ]
  }
}
